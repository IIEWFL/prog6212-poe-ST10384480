@page
@model P3CMCS.Pages.PrivacyModel

<h2>Submitted Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer ID</th>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Rate</th>
            <th>Notes</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.LecturerId</td>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.Rate</td>
                <td>@claim.Notes</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>